  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "PhotosDrop Backend",
      "args": ["${workspaceFolder}/packages/backend/src/main.ts"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}/packages/backend"
    },
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "args": ["--runInBand"],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    }
  ]
}
